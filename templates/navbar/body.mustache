{{!
    @template local_wb_faq/navbar/body

    Classes required for JS:
    * none

    Example context (json):
    {
        "tabs": [
            {
                "name": "mytabname",
                "active": true,
                "success": true
            }
        ]
        "body": [
            {
                "thankyou": "Thank you",
            }
        ],

    }
}}
<div class="faq-page-navbar-body-container col-md-12">
        {{> local_wb_faq/navbar/header }}
        {{#body}}
          <div class="tab-content" id="faq-nav-pillstabContent">
            <div class="tab-pane fade show active" id="faq-nav-pillsone" role="tabpanel" aria-labelledby="faq-nav-pillsone-tab">
                {{> local_wb_faq/display_search_modal }}
                {{> local_wb_faq/faq_list_modal }}
            </div>
            <div class="tab-pane fade" id="faq-nav-pillstwo" role="tabpanel" aria-labelledby="faq-nav-pillstwo-tab">
                <div data-id="supportmessage-form"></div>
            </div>
            <div class="tab-pane fade" id="faq-nav-pillsthree" role="tabpanel" aria-labelledby="faq-nav-pillsthree-tab">
                <div class="supportmessage-thankyoutext">

                    {{#thankyou}}
                        {{thankyou}}
                    {{/thankyou}}

                    {{^thankyou}}
                        {{#str}} thankyoutext, local_wb_faq {{/str}}
                    {{/thankyou}}
                </div>
            </div>
          </div>
        {{/body}}
</div>

{{#js}}
require(['local_wb_faq/supportmessage_form'], function(init) {
    init.init();
  });
{{/js}}