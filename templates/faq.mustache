{{!
    @template mod_mooduell/viewpage
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
        "categories" : [
            [
               {
                  "catid":"7",
                  "contextid":"1",
                  "catname":"MooDuell Pr\u00e4sentation",
                  "courseid":"50"
               }
            ]
        ]
    }
}}

<div class="current-faq">
  <div class="d-flex">
  {{^toplevel}}
  <h3 class="btn btn-primary mb-2 px-4 mr-2" data-action="goto" data-targetid='{{rootid}}'>{{roottitle}}</h3>
  <h3 class="mr-2"> / </h3>
  <h3 class="btn btn-primary mb-2 px-4 mr-2" data-action="goto" data-targetid='{{parentid}}'>{{parenttitle}}</h3>
  <h3 class="mr-2"> / </h3>
  {{/toplevel}}
  <h3 class="mr-2">{{title}}</h3>
  </div>



  {{#categories}}
    {{>local_wb_faq/category}}
  {{/categories}}

  <div class="accordion" id="wb-faq-accordion">
    {{#entries}}
      {{>local_wb_faq/entry}}
    {{/entries}}
  </div>
</div>

